<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="KindWords.Views.InboxPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KindWords.ViewModels"
             xmlns:models="clr-namespace:KindWords.Models"
             x:DataType="vm:InboxViewModel"
             Title="Inbox"
             BackgroundColor="#F0F8FF">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Search Header -->
        <StackLayout Grid.Row="0" Padding="16" BackgroundColor="#E6F3FF" Spacing="12">
            <Label Text="💌 Spread Kindness"
                   FontSize="20"
                   FontFamily="OpenSansSemibold"
                   TextColor="#4682B4"
                   HorizontalOptions="Center" />
            
            <StackLayout Orientation="Horizontal" Spacing="8">
                <Entry Text="{Binding SearchText}"
                       Placeholder="Search messages..."
                       BackgroundColor="White"
                       TextColor="#2F4F4F"
                       HorizontalOptions="FillAndExpand"
                       ReturnCommand="{Binding SearchMessagesCommand}" />
                
                <Picker ItemsSource="{Binding CategoryFilters}"
                        SelectedItem="{Binding SelectedCategoryFilter}"
                        BackgroundColor="White"
                        TextColor="#2F4F4F"
                        WidthRequest="120" />
            </StackLayout>
        </StackLayout>

        <!-- Messages List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Messages}"
                        SelectedItem="{Binding SelectedMessage}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding SelectMessageCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}"
                        BackgroundColor="Transparent"
                        Margin="16,8">
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Message">
                    <Border BackgroundColor="#FFFEF7"
                            Stroke="{Binding CategoryColor}"
                            StrokeThickness="2"
                            Margin="0,4"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        
                        <StackLayout Spacing="8">
                            <!-- Category Badge -->
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="{Binding CategoryEmoji}"
                                       FontSize="16" />
                                <Label Text="{Binding Category}"
                                       FontSize="12"
                                       FontFamily="OpenSansSemibold"
                                       TextColor="{Binding CategoryColor}"
                                       VerticalOptions="Center" />
                                
                                <Label Text="{Binding CreatedAt, StringFormat='{0:MM/dd HH:mm}'}"
                                       FontSize="10"
                                       TextColor="#888"
                                       HorizontalOptions="EndAndExpand"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            
                            <!-- Message Content -->
                            <Label Text="{Binding Content}"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="#2F4F4F"
                                   LineBreakMode="WordWrap" />
                            
                            <!-- Reply Count -->
                            <Label Text="{Binding ReplyCount, StringFormat='💬 {0} replies'}"
                                   FontSize="10"
                                   TextColor="#666"
                                   HorizontalOptions="End" />
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Reply Section (shows when message is selected) -->
        <Border Grid.Row="2" 
                BackgroundColor="#F8F4E6"
                Stroke="#DEB887"
                StrokeThickness="1"
                IsVisible="{Binding SelectedMessage, Converter={StaticResource IsNotNullConverter}}"
                Padding="16">
            
            <StackLayout Spacing="12">
                <Label Text="💝 Send some kindness back"
                       FontFamily="OpenSansSemibold"
                       FontSize="14"
                       TextColor="#8B4513" />
                
                <Entry Text="{Binding ReplyContent}"
                       Placeholder="Type your kind words here..."
                       BackgroundColor="White"
                       TextColor="#2F4F4F"
                       ReturnCommand="{Binding SendReplyCommand}" />
                
                <StackLayout Orientation="Horizontal" 
                             Spacing="8" 
                             HorizontalOptions="End">
                    <Button Text="Cancel"
                            Command="{Binding CancelReplyCommand}"
                            BackgroundColor="#F5DEB3"
                            TextColor="#8B4513"
                            FontSize="12"
                            WidthRequest="80"
                            HeightRequest="35"
                            CornerRadius="17" />
                    
                    <Button Text="{Binding IsSendingReply, Converter={StaticResource BoolToSendButtonTextConverter}}"
                            Command="{Binding SendReplyCommand}"
                            BackgroundColor="#98FB98"
                            TextColor="#2E8B57"
                            FontSize="12"
                            WidthRequest="100"
                            HeightRequest="35"
                            CornerRadius="17"
                            IsEnabled="{Binding IsSendingReply, Converter={StaticResource InverseBoolConverter}}" />
                </StackLayout>
            </StackLayout>
        </Border>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                           IsVisible="{Binding IsLoading}"
                           IsRunning="{Binding IsLoading}"
                           Color="#4682B4"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
    </Grid>

</ContentPage> 