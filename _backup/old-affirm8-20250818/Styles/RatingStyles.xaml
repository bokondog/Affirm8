<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:controls="clr-namespace:Affirm8.Controls">

    <!-- Default Rating Style -->
    <Style x:Key="RatingStyle" TargetType="controls:RatingControl">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Large Rating Style -->
    <Style x:Key="LargeRatingStyle" TargetType="controls:RatingControl">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Small Rating Style -->
    <Style x:Key="SmallRatingStyle" TargetType="controls:RatingControl">
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Common Rating Settings (placeholder for backward compatibility) -->
    <Style x:Key="CommonRatingSettings" TargetType="controls:RatingControl">
        <Setter Property="Maximum" Value="5" />
        <Setter Property="IsReadOnly" Value="False" />
    </Style>

</ResourceDictionary>