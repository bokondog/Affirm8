<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Affirm8.Controls.RatingControl"
             x:Name="ratingControl">
    <StackLayout Orientation="Horizontal" Spacing="2">
        <Button Text="★" BackgroundColor="Transparent" 
                TextColor="{Binding Star1Color, Source={x:Reference ratingControl}}"
                FontSize="20" Clicked="OnStarClicked" CommandParameter="1" />
        <Button Text="★" BackgroundColor="Transparent" 
                TextColor="{Binding Star2Color, Source={x:Reference ratingControl}}"
                FontSize="20" Clicked="OnStarClicked" CommandParameter="2" />
        <Button Text="★" BackgroundColor="Transparent" 
                TextColor="{Binding Star3Color, Source={x:Reference ratingControl}}"
                FontSize="20" Clicked="OnStarClicked" CommandParameter="3" />
        <Button Text="★" BackgroundColor="Transparent" 
                TextColor="{Binding Star4Color, Source={x:Reference ratingControl}}"
                FontSize="20" Clicked="OnStarClicked" CommandParameter="4" />
        <Button Text="★" BackgroundColor="Transparent" 
                TextColor="{Binding Star5Color, Source={x:Reference ratingControl}}"
                FontSize="20" Clicked="OnStarClicked" CommandParameter="5" />
    </StackLayout>
</ContentView> 