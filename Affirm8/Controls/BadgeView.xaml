<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="Affirm8.Controls.BadgeView"
      x:Name="badgeView">
    
    <!-- Main content -->
    <ContentPresenter x:Name="ContentPresenter" 
                      Content="{Binding Content, Source={x:Reference badgeView}}" />
    
    <!-- Badge overlay -->
    <Border x:Name="BadgeBorder"
            IsVisible="{Binding ShowBadge, Source={x:Reference badgeView}}"
            BackgroundColor="{Binding BadgeColor, Source={x:Reference badgeView}}"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Margin="-8,-8,0,0"
            WidthRequest="20"
            HeightRequest="20">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        
        <Label x:Name="BadgeLabel"
               Text="{Binding BadgeText, Source={x:Reference badgeView}}"
               TextColor="{Binding BadgeTextColor, Source={x:Reference badgeView}}"
               FontSize="10"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Border>
</Grid> 