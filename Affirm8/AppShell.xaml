<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Affirm8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Affirm8"
    xmlns:pages="clr-namespace:Affirm8.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Affirm8">
    <TabBar>
        <Tab Title="Mates">
            <ShellContent ContentTemplate="{DataTemplate pages:MatesPage}" />
        </Tab>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Title="Mail">
            <ShellContent ContentTemplate="{DataTemplate pages:MailPage}" />
        </Tab>
        <Tab Title="Profile">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}" />
        </Tab>
    </TabBar>


</Shell>
