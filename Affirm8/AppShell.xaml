<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Affirm8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Affirm8"
    xmlns:views="clr-namespace:Affirm8.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Affirm8">

    <TabBar>
        <ShellContent
            Title="Send"
            Icon="{FontImage Glyph=✍️, Size=24}"
            ContentTemplate="{DataTemplate views:SendMessagePage}"
            Route="SendMessage" />
        
        <ShellContent
            Title="Inbox"
            Icon="{FontImage Glyph=📥, Size=24}"
            ContentTemplate="{DataTemplate views:InboxPage}"
            Route="Inbox" />
        
        <ShellContent
            Title="My Messages"
            Icon="{FontImage Glyph=📝, Size=24}"
            ContentTemplate="{DataTemplate views:MyMessagesPage}"
            Route="MyMessages" />
        
        <ShellContent
            Title="Profile"
            Icon="{FontImage Glyph=👤, Size=24}"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="Profile" />
        
        <ShellContent
            Title="Settings"
            Icon="{FontImage Glyph=⚙️, Size=24}"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="Settings" />
</TabBar>
</Shell>
