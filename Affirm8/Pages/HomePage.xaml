<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Affirm8.Pages.HomePage"
             Title="HomePage">
    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">
        <SearchBar Grid.Row="0" Placeholder="Search" Margin="10"></SearchBar>
        <Button Grid.Row="1" 
                x:Name="sfButton" 
                Margin="10" 
                Text="What's on your mind?" 
                Clicked="sfButton_Clicked"
                BackgroundColor="{AppThemeBinding Light={DynamicResource CardBackgroundLight}, Dark={DynamicResource CardBackgroundDark}}"
                TextColor="{AppThemeBinding Light={DynamicResource SecondaryTextColorLight}, Dark={DynamicResource SecondaryTextColorDark}}"
                CornerRadius="8"
                HeightRequest="45" />
        <CollectionView x:Name="CollViewPosts" Grid.Row="2" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding PostId}"/>
                        <Label Text="{Binding UserId}"/>
                        <Label Text="{Binding Timestamp}"/>
                        <Label Text="{Binding Content}"/>
                        <Label Text="-------------------------------------"/>

                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>