<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Affirm8.Pages.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <Button x:Name="BtnNavProfile" Text="Profile" Clicked="BtnNavProfile_Clicked"></Button>
            <Button x:Name="BtnNavMates"  Text="Mates" Clicked="BtnNavMates_Clicked"></Button>
            <Button x:Name="BtnNavHome" Text="Home" Clicked="BtnNavHome_Clicked"></Button>
            <Button x:Name="BtnNavMail" Text="Mail" Clicked="BtnNavMail_Clicked"></Button>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>