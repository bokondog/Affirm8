<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Affirm8.Pages.HomePage"
             Title="HomePage">
    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*">
        <Label Grid.Row="0"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        <HorizontalStackLayout Grid.Row="2">
            <Button x:Name="BtnNavProfile" Text="Profile" Clicked="BtnNavProfile_Clicked"></Button>
            <Button x:Name="BtnNavMates"  Text="Mates" Clicked="BtnNavMates_Clicked"></Button>
            <Button x:Name="BtnNavHome" Text="Home" Clicked="BtnNavHome_Clicked"></Button>
            <Button x:Name="BtnNavMail" Text="Mail" Clicked="BtnNavMail_Clicked"></Button>
        </HorizontalStackLayout>
        <CollectionView x:Name="CollViewPosts" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding PostId}"/>
                        <Label Text="{Binding UserId}"/>
                        <Label Text="{Binding Timestamp}"/>
                        <Label Text="{Binding Content}"/>
                        <Label Text="-------------------------------------"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>