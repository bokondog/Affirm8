<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Affirm8.Views.Navigation.ContactsPage"
             xmlns:listView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:sfavatar="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:local="clr-namespace:Affirm8"
             x:DataType="local:ContactsPageViewModel" Title="Mates">
    <ContentPage.BindingContext>
        <local:ContactsPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>

        <Grid Padding="10"
              ColumnSpacing="0"
              RowSpacing="0"
                RowDefinitions="{OnPlatform Default=*, MacCatalyst=Auto}">
            <Border StrokeShape="RoundRectangle 10" HeightRequest="{OnPlatform MacCatalyst=600}"
                    WidthRequest="{OnPlatform WinUI=550, MacCatalyst=550}"
                    BackgroundColor="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}"
                    IsVisible="{OnPlatform Android=False, iOS=False}">
                <Grid>

                    <listView:SfListView
                        AllowSwiping="True"
                        AutoFitMode="Height"
                        ScrollBarVisibility="Never"
                        ItemSpacing="0"
                        ItemsSource="{Binding ContactsList}"
                        SelectionBackground="{AppThemeBinding Light={DynamicResource SelectionBackgroundLight}, Dark={DynamicResource SelectionBackgroundDark}}"
                        SelectionGesture="Tap"
                        SelectionMode="Single"
                        VerticalOptions="Fill">

                        <listView:SfListView.ItemTemplate>
                            <DataTemplate x:DataType="local:Contact">
                                <ViewCell>
                                    <ViewCell.View>
                                        <Grid
                                            ColumnDefinitions="Auto, *"
                                            ColumnSpacing="0"
                                            HeightRequest="62"
                                            RowSpacing="0">

                                            <!--  Contact name avatar  -->
                                            <sfavatar:SfAvatarView
                                                Margin="16,8"
                                                AvatarName="{Binding Name}"
                                                BackgroundColor="{Binding BackgroundColor}"
                                                FontFamily="Roboto-Regular"
                                                Style="{DynamicResource AvatarViewStyle}"/>

                                            <!--  Contact name  -->
                                            <Label
                                                Grid.Column="1"
                                                Margin="0,16"
                                                FontFamily="Roboto-Regular"
                                                HorizontalOptions="Start"
                                                Style="{DynamicResource TitleLabelStyle}"
                                                Text="{Binding Name}"
                                                VerticalOptions="Center"/>
                                        </Grid>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </listView:SfListView.ItemTemplate>
                    </listView:SfListView>
                </Grid>
            </Border>

            <Grid Grid.Row="2"
                  IsVisible="{OnPlatform WinUI=False, MacCatalyst=False}">

                <listView:SfListView
                    AllowSwiping="True"
                    AutoFitMode="Height"
                    ScrollBarVisibility="Never"
                    ItemSpacing="0"
                    ItemsSource="{Binding ContactsList}"
                    SelectionBackground="{AppThemeBinding Light={DynamicResource SelectionBackgroundLight}, Dark={DynamicResource SelectionBackgroundDark}}"
                    SelectionGesture="Tap"
                    SelectionMode="Single"
                    VerticalOptions="Fill">

                    <listView:SfListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Contact">
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid
                                        ColumnDefinitions="Auto, *"
                                        ColumnSpacing="0"
                                        HeightRequest="62"
                                        RowSpacing="0">

                                        <!--  Contact name avatar  -->
                                        <sfavatar:SfAvatarView
                                            Margin="16,8"
                                            AvatarName="{Binding Name}"
                                            BackgroundColor="{Binding BackgroundColor}"
                                            FontFamily="Roboto-Regular"
                                            Style="{DynamicResource AvatarViewStyle}"/>

                                        <!--  Contact name  -->
                                        <Label
                                            Grid.Column="1"
                                            Margin="0,16"
                                            FontFamily="Roboto-Regular"
                                            HorizontalOptions="Start"
                                            Style="{DynamicResource TitleLabelStyle}"
                                            Text="{Binding Name}"
                                            VerticalOptions="Center"/>
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </listView:SfListView.ItemTemplate>
                </listView:SfListView>
            </Grid>


        </Grid>
    </ContentPage.Content>
</ContentPage>